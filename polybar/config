[module/git]
type = custom/script
exec = "git -C ~/Documentos/git/web-frontend log -1 --format='%B (%an)'"
format-foreground = #ffffff
format-padding = 1
format-prefix = " "
format-prefix-padding = 1
format-prefix-foreground = #bbbbbb
tail = false
interval = 3

[module/bright]
type = custom/script
exec = "cat /sys/class/backlight/intel_backlight/brightness"
format-foreground = #ffffff
format-padding = 1
format-prefix = "Br /"
format-prefix-padding = 1
format-prefix-foreground = "#bbbbbb"
tail = false
interval = 3

[module/music]
type = custom/script
exec = playerctl metadata xesam:title
exec-if = "pgrep -x spotify"
format-prefix = " "
format-foreground = #ffffff
format-padding = 1
format-prefix-padding = 1
format-prefix-foreground = #bbbbbb
tail = false
interval = 0
click-left = playerctl play-pause

[module/play-pause]
type = custom/script
label = %output%
interval = 0
; format_background = #268bd2
format-foreground = #cccccc
format-prefix-foreground = #5b
exec = echo $([ $(playerctl --player=spotify status) == "Playing" ] && echo "" || echo "")
exec-if = pgrep -x spotify
tail = true
format-padding = 2
format-prefix-padding = 4
click-left = playerctl play-pause

