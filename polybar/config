[module/rofi]
type = custom/text
content = " "
click-left = rofi -show drun -location 1 -xoffset 39 -yoffset 73
click-right = rofi -show window -location 1 -xoffset 39 -yoffset 73
enable-click = true
content-background = #CC7a4d46
content-foreground = #c8bbb5
content-padding = 2 

